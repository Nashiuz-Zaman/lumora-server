{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs", // âœ… Required for require() and CJS

    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["config/*"],
      "@types/*": ["types/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "*": ["types/*", "*"]
    }
  },
  "include": ["src", "src/start.ts", "tailwind.config.js"]
}
